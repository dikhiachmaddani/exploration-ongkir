{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"include": ["src/**/*.ts", "src/**/*.tsx"],
		"ignore": ["node_modules/**", ".next/**", "public/**"]
	},
	"formatter": {
		"indentStyle": "space",
		"enabled": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noConsoleLog": "error",
				"noExplicitAny": "warn"
			}
		}
	}
}
